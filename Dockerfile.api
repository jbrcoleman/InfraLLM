# Dockerfile for InfraLLM API Service
FROM python:3.12-slim

LABEL maintainer="Platform Engineering Team"
LABEL description="InfraLLM API Service for Backstage Integration"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml ./
COPY README.md ./

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    anthropic \
    PyGithub \
    click \
    pyyaml \
    rich \
    pydantic \
    jinja2 \
    fastapi \
    "uvicorn[standard]"

# Copy application code
COPY src/ ./src/
COPY infrallm_api/ ./infrallm_api/

# Create directory for templates if needed
RUN mkdir -p /app/src/terraform/templates

# Expose API port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/api/v1/health')"

# Run the API server
CMD ["uvicorn", "infrallm_api.main:app", "--host", "0.0.0.0", "--port", "8000"]
