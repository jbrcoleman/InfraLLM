# Outputs for EKS Cluster: {{ resource_name }}
# Generated by InfraLLM on {{ generated_at }}

output "cluster_id" {
  description = "The name/id of the EKS cluster"
  value       = aws_eks_cluster.{{ tf_resource_name }}.id
}

output "cluster_arn" {
  description = "The Amazon Resource Name (ARN) of the cluster"
  value       = aws_eks_cluster.{{ tf_resource_name }}.arn
}

output "cluster_endpoint" {
  description = "Endpoint for EKS control plane"
  value       = aws_eks_cluster.{{ tf_resource_name }}.endpoint
}

output "cluster_security_group_id" {
  description = "Security group ID attached to the EKS cluster"
  value       = aws_eks_cluster.{{ tf_resource_name }}.vpc_config[0].cluster_security_group_id
}

output "cluster_certificate_authority_data" {
  description = "Base64 encoded certificate data required to communicate with the cluster"
  value       = aws_eks_cluster.{{ tf_resource_name }}.certificate_authority[0].data
  sensitive   = true
}

output "cluster_version" {
  description = "The Kubernetes server version for the cluster"
  value       = aws_eks_cluster.{{ tf_resource_name }}.version
}
{%- for node_group in parameters.node_groups %}

output "node_group_{{ node_group.name | sanitize_identifier }}_id" {
  description = "Node group {{ node_group.name }} ID"
  value       = aws_eks_node_group.{{ tf_resource_name }}_{{ node_group.name | sanitize_identifier }}.id
}

output "node_group_{{ node_group.name | sanitize_identifier }}_status" {
  description = "Node group {{ node_group.name }} status"
  value       = aws_eks_node_group.{{ tf_resource_name }}_{{ node_group.name | sanitize_identifier }}.status
}
{%- endfor %}
